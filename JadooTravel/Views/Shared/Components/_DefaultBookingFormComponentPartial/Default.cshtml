@model CreateBookingDto
<div class="col-lg-6 d-flex justify-content-center align-items-start">
	<div class="card shadow-lg" style="width: 100%; max-width: 700px;">
		<div class="card-header bg-info text-white text-center p-3">
			<h3 class="mb-0 text-white">Rezervasyon Formu</h3>
		</div>
		<div class="card-body">
			<form method="post" asp-controller="Default" asp-action="SendMessage">
				<div class="mb-3">
					<input type="text" name="NameSurname" class="form-control p-2" placeholder="Adınız Soyadınız" required />
				</div>
				<div class="mb-3">
					<input type="tel" name="PhoneNumber" class="form-control p-2" placeholder="Telefon Numaranız" required />
				</div>
				<div class="mb-3">
					<input type="email" name="Email" class="form-control p-2" placeholder="Email Adresiniz" required />
				</div>
				<div class="mb-3">
					<textarea rows="8" name="MessageBody" class="form-control p-2" placeholder="Varsa eklemek istedikleriniz"></textarea>
				</div>
				<div class="d-grid">
					<button type="submit" class="btn btn-info">Rezervasyon Yap</button>
				</div>
			</form>
		</div>
	</div>
</div>